<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.guest.ghostydrop.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/top_bar"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/searchLogo"
            app:srcCompat="@mipmap/search_white" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/social_white"
            android:id="@+id/profileImageView"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignTop="@+id/searchLogo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="GhostDrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headerText"
            android:textSize="38sp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/profileImageView"
            android:layout_centerHorizontal="true" />

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@id/headerText"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:id="@+id/horizLine" />

    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/camera_white"
        android:id="@+id/cameraLogo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/back"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/top_bar"
        android:layout_alignStart="@+id/top_bar"
        android:id="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/next"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignRight="@+id/top_bar"
        android:layout_alignEnd="@+id/top_bar"
        android:id="@+id/imageView4" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/top_bar"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/bullet2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorText"
            android:text="• Take a picture, add a comment, and other users are able to collect, like, or comment on those photos those photos"
            android:textSize="18dp"
            android:layout_below="@+id/bullet1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/bullet1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3sp"
            android:text="• This is my final project demonstrating my programming skillset!"
            android:textSize="18dp"
            android:textColor="@color/colorText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>

