<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:id="@+id/baseLayout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/form"
        android:background="@color/colorBlue"
     android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:text="Save Info"
            android:padding="10dp"
            android:background="@color/colorPositive"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Cancel"
            android:padding="10dp"
            android:background="@color/colorNegative"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:text="Edit Profile Information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ageEditTextView"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView2" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ageEditTextView"
            android:layout_above="@+id/bioEditTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp" />

        <EditText
            android:hint="Bio of how amaziong you are!"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/cardview_light_background"
            android:id="@+id/bioEditTextView"
            android:textSize="25dp"
            android:textColor="@color/colorBlack"
            android:layout_above="@+id/emailEditTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailEditTextView"
            android:text=""
            android:hint="email address"
            android:layout_above="@+id/postButton"
            android:layout_marginBottom="92dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



    </RelativeLayout>
</LinearLayout>

