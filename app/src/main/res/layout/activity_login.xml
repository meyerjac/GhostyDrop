<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.guest.ghostydrop.LoginActivity">


    <com.facebook.login.widget.LoginButton
        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:text="connect_with_facebook"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:visibility="gone" />

    <TextView
        android:text="GhostDrop"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/welcomeTextView"
        android:textSize="60sp"
        android:padding="2dp"
        android:gravity="center"
        android:alpha=".2"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="GhostDrop"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/welcomeTextView3"
        android:textColor="@color/colorPrimary"
        android:textSize="60sp"
        android:padding="2dp"
        android:gravity="center"
        android:alpha=".2"
        android:layout_above="@+id/loginButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="GhostDrop"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/welcomeTextView2"
        android:textSize="60sp"
        android:padding="2dp"
        android:gravity="center"
        android:alpha=".2"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/loginButton"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_toEndOf="@+id/progressBar"
        android:layout_marginTop="64dp" />

    <TextView
        android:text="GhostDrop"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/welcomeTextView4"
        android:textSize="60sp"
        android:padding="2dp"
        android:gravity="center"
        android:alpha=".6"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/loginButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/exploreRelativeLayoutBox">


        <Button
            android:text="Explore"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="22dp"
            android:id="@+id/exploreButton"
            android:background="@drawable/green_button_box"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:text="New to GhostDrop?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView" />
    </RelativeLayout>

</RelativeLayout>

