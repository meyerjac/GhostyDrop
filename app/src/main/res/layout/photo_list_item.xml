<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/com_facebook_likeview_text_color"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:weightSum="1">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/photoImageView"
        android:src="@mipmap/arrows"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_weight="15.75" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryBackground"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/photoCommentTextView"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Photo description"
            android:textColor="@color/colorPrimaryText" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:text="distance away"
                android:id="@+id/distanceTextView"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryText"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/collectPhoto"
                android:layout_toStartOf="@+id/collectPhoto" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Collect Photo"
                android:id="@+id/collectPhoto"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>