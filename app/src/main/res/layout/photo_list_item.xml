<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/com_facebook_likeview_text_color"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="15dp"
    android:weightSum="1">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/photoImageView"
        android:src="@mipmap/arrows"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_weight="15.75" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryBackground"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="82dp">

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Collect"
                android:id="@+id/collectPhoto"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:layout_alignParentStart="true"
                android:id="@+id/postOwnerNameTextView"
                android:hapticFeedbackEnabled="true" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:text="distance away"
                android:id="@+id/distanceTextView"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photoCommentTextView"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Photo description"
                android:textColor="@color/colorBlack"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/distanceTextView"
                android:layout_toRightOf="@+id/postOwnerNameTextView"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>