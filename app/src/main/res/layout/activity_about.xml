<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.guest.ghostydrop.AboutActivity">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <TextView
                android:id="@+id/body_text3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="About"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/bullet1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:layout_marginTop="10dp"
                android:text="• Ghosty Drop is a gamified social media, allowing you to 'drop photos' all over the natural world that other people can find!"
                android:textSize="22dp"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/body_text3"
                android:layout_marginLeft="20dp" />
            <TextView
                android:id="@+id/bullet2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:text="• Take a picture, add a comment, and your facebook friends will be notified when you are close to a picture they dropped"
                android:textSize="22dp"
                android:layout_below="@+id/bullet1"
                android:layout_marginLeft="20dp" />
            <TextView
                android:id="@+id/bullet3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:text="• The discover feature will find pictures that other people have dropped, have fun!!!"
                android:textSize="22dp"
                android:layout_below="@+id/bullet2"
                android:layout_marginLeft="20dp" />

        </RelativeLayout>
</RelativeLayout>
